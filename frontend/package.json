{
  "name": "data-analysis-visualization-app",
  "version": "1.0.0",
  "description": "数据分析与可视化桌面应用",
  "author": {
    "name": "dandan",
    "email": "zhaidandan00@gmail.com"
  },
  "main": "electron.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "start": "electron .",
    "dev": "webpack serve --mode development",
    "build": "webpack --mode production",
    "electron-dev": "cross-env NODE_ENV=development ELECTRON_DISABLE_SECURITY_WARNINGS=true ELECTRON_ENABLE_LOGGING=true electron .",
    "pack": "electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:windows": "npm run build && electron-builder --win --x64",
    "test": "echo \"No tests specified\" && exit 0",
    "lint": "eslint src/**/*.{js,ts,tsx}",
    "version": "echo \"版本更新完成\""
  },
  "build": {
    "appId": "com.yourcompany.insightwave",
    "productName": "InsightWave",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "electron.js",
      "package.json",
      "build/icon.ico",
      "node_modules/electron-log/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "artifactName": "${productName}-${version}-${arch}.${ext}",
    "publish": [
      {
        "provider": "github",
        "owner": "baoyu0",
        "repo": "InsightWave",
        "private": false,
        "releaseType": "release"
      }
    ]
  },
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@babel/preset-react": "^7.22.0",
    "@eslint/js": "^9.10.0",
    "babel-loader": "^9.1.2",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "electron": "^25.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.36.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "globals": "^15.9.0",
    "html-webpack-plugin": "^5.5.1",
    "style-loader": "^3.3.3",
    "version-bump-prompt": "^6.1.0",
    "wait-on": "^7.2.0",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1",
    "webpack-dev-server": "^4.15.0"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.11.16",
    "@mui/material": "^5.16.8",
    "axios": "^1.8.2",
    "chart.js": "^4.4.7",
    "electron-log": "^4.4.8",
    "electron-updater": "^6.6.0",
    "glob": "^11.0.1",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "rimraf": "^6.0.1"
  }
}